@model CapstoneProject.Controllers.SubClass
@{
    ViewData["Title"] = "Abone Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <a href="/AdminSubscribe/Index" class="btn btn-app"><i class="fa fa-arrow-left"></i> Geri Dön</a> 
    </div>
    <div class="box-header with-border">
        <h3 class="box-title">Abone Güncelleme Sayfası</h3>
    </div>
    <form method="post" role="form">
        <div class="box-body" style="display:none;">
            <div class="form-group"> 
                @Html.TextBoxFor(x => x.ID, new{@class="hidden form-control"})
            </div>
        </div>
        <div class="box-body">
            <div class="form-group">
                <label>Adı Soyadı</label>
                @Html.TextBoxFor(x => x.NameSurname, new{@class="form-control"})
            </div>
        </div>
        <div class="box-body">
           <div class="form-group">
                <label>Telefon Numarası</label>
                @Html.TextBoxFor(x => x.PhoneNumber, new{@class="form-control"})
            </div>
        </div>
         <div class="box-body">
            <div class="form-group">
                <label>Email</label>
                @Html.TextBoxFor(x => x.Email, new{@class="form-control"})
            </div>
        </div>
        <div class="box-body" style="display:none;">
            <div class="form-group"> 
                @Html.TextBoxFor(x => x.Status, new{@class="hidden form-control"})
            </div>
        </div>

        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>

