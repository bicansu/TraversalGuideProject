@model List<Banner>
@{
    ViewData["Title"] = "Banner";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Banner Listesi</h3>&emsp;
        <a class="btn btn-success" href="/AdminBanner/AddBanner/"><i class="fa fa-plus"></i> Yeni Ekle</a>
    </div>

    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>Kısa Açıklama</th>
                    <th>Uzun Açıklama</th>
                    <th>Resim</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.BannerID</td>
                        <td>@item.Title</td>
                        <td>@item.SubTitle</td>
                        <td>@item.Description</td>
                        <td>
                            <img src="@item.Image" style="width:100px; height:100px;" /> 
                        </td>
                        <td>
                            @if (item.Status == true)
                            {
                                <a href="/AdminBanner/ChangeSubStatFalse/@item.BannerID" class="btn btn-success"> AKTİF</a>
                            }
                            else
                            {

                                <a href="/AdminBanner/ChangeSubStatTrue/@item.BannerID" class="btn btn-danger"> PASİF</a>

                            }
                        </td>
                        <td>
                            <a href="/AdminBanner/UpdateBanner/@item.BannerID" class="btn btn-primary">GÜNCELLE</a>
                            <a href="/AdminBanner/DeleteBanner/@item.BannerID" class="btn btn-danger">SİL</a>

                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

