@model AdminRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Traversal Admin Kayıt Ekranı</title>
     <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
     <link rel="stylesheet" href="~/AdminTemplate/bower_components/bootstrap/dist/css/bootstrap.min.css">
     <link rel="stylesheet" href="~/AdminTemplate/bower_components/font-awesome/css/font-awesome.min.css">
     <link rel="stylesheet" href="~/AdminTemplate/bower_components/Ionicons/css/ionicons.min.css">
     <link rel="stylesheet" href="~/AdminTemplate/dist/css/AdminLTE.min.css">
 
    <link rel="stylesheet" href="~/AdminTemplate/plugins/iCheck/square/blue.css">
 
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition register-page">
    <div class="register-box">
        <div class="register-logo">
            <a href="~/AdminTemplate/index2.html"><b>Admin Kayıt Ekranı</b></a>
        </div>

        <div class="register-box-body">
            <p class="login-box-msg">
                Üye Kaydı   
            </p> 
            <form method="post" asp-action="SignUp" asp-controller="AdminLogin">
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Adınız" asp-for="Name">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Soyadınız" asp-for="Surname">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    <span asp-validation-for="Surname"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="email" class="form-control" placeholder="Email" asp-for="Mail">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    <span asp-validation-for="Mail"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Kullanıcı adınız" asp-for="Username">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    <span asp-validation-for="Username"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Şifre" asp-for="Password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Şifre Tekrar" asp-for="ConfirmPassword">
                    <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="row">
                    <div class="col-xs-4" style="float:left">
                        <a href="/AdminLogin/SignIn/" class="text-center btn btn-warning"><i class="fa fa-arrow-left"></i> Giriş Yap</a>
                    </div> 
                    <div class="col-xs-4" style="float:right">
                       
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Kayıt Ol</button>
                    </div> 
                </div>
                <br />
                <div class="row">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible"></div>
                </div>
            </form> 
        </div> 
    </div> 
    <script src="~/AdminTemplate/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/AdminTemplate/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/AdminTemplate/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });
    </script>
</body>
</html>
