@model List<About>
@{
    Layout = null;
}

 
<section id="spo" class="special-offer">
	<div class="container">
		<div class="special-offer-content">
			<div class="row">
				<div class="col-sm-8">
					<div class="single-special-offer">
						@foreach(var item in Model){
						<div class="single-special-offer-txt">
							<h2>@item.Title</h2>
							<div class="packages-review special-offer-review">
								<p>
								 
								</p>
							</div><!--/.packages-review-->
							<div class="packages-para special-offer-para">
								<p>
									<span>
										<i class="fa fa-angle-right"></i> @item.ShortDescription
									</span>
									 
								</p>
							 
								<p class="offer-para">
									@item.LongDescription					
								</p>
							</div> 
							<div class="offer-btn-group">
								 
								<div class="about-btn">
								 
								</div><!--/.about-btn-->
							</div><!--/.offer-btn-group-->
						</div><!--/.single-special-offer-txt-->
						}
					</div><!--/.single-special-offer-->
				</div><!--/.col-->
				<div class="col-sm-4">
					<div class="single-special-offer">
						<div class="single-special-offer-bg">
							<img src="~/UserTemplate/assets/images/offer/offer-shape.png" alt="offer-shape">
						</div><!--/.single-special-offer-bg-->
						<div class="single-special-shape-txt">
							<h3> </h3>
							<h4><span> </span><br> </h4>
							<p><span> </span><br>     </p>
						</div><!--/.single-special-shape-txt-->
					</div><!--/.single-special-offer-->
				</div><!--/.col-->
			</div><!--/.row-->
		</div><!--/.special-offer-content-->
	</div><!--/.container-->

</section> 
