@model About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Update About</h3>
    </div>
    <form method="post" role="form" asp-action="UpdateAbout" asp-controller="AdminAbout" enctype="multipart/form-data">
        <input type="hidden" asp-for="AboutID" />
        <div class="box-body">
            <div class="form-group">
                <label>Title</label>
                <input type="text" class="form-control" asp-for="Title" placeholder="Enter Title">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Short Description</label>
                <input type="text" class="form-control" asp-for="ShortDescription" placeholder="Enter Short Description">
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Long Description</label>
                <input type="text" class="form-control" asp-for="LongDescription" placeholder="Enter Long Description">
                <span asp-validation-for="LongDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Image</label>
                <input type="file" asp-for="Image">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
          

        </div>
        <!-- /.box-body -->

        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Gönder</button>
        </div>
    </form>
</div>