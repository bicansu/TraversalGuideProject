@model AppUser
@{
    Layout = null;
} 
<header class="top-area">
	<div class="header-area">
		<div class="container">
			<div class="row">
				<div class="col-sm-2">
					<div class="logo">
						<a href="#home">
							CNS<span>TOUR</span>
						</a>
					</div> 
				</div> 
				<div class="col-sm-10">
					<div class="main-menu"> 
 						<div class="navbar-header">
							<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
								<i class="fa fa-bars"></i>
							</button> 
						</div> 
						<div class="collapse navbar-collapse">
							<ul class="nav navbar-nav navbar-right">
								<li class="smooth-menu"><a href="#home">Anasayfa</a></li>
								<li class="smooth-menu"><a href="#service">Hizmetlerimiz</a></li>
								<li class="smooth-menu"><a href="#pack">Paketler </a></li>
								<li class="smooth-menu"><a href="#spo">Hakkımızda</a></li>							
								<li class="smooth-menu"><a href="#subs">Abone Ol</a></li>
								<li class="smooth-menu"><a href="#footer">Bize Ulaşın</a></li>
								@if (ViewBag.Name==""){
									<li>
										<a class="book-btn" href="/Login/Index/">
											<i class="fa fa-user"></i> Üye Girişi 
										</a> 
									</li>
								}
								else
								{
									<li class="smooth-menu">
										<button type="button" class="book-btn" onclick="window.location.href='/Login/SignOut/'" style="width:100%;font-size:13px;padding-left:5px;padding-right:5px;" title="Çıkış Yap">
											@ViewBag.Name @ViewBag.Surname
										</button>
									</li>
								}
							</ul>
						</div> 
					</div> 
				</div> 
			</div> 
			<div class="home-border"></div> 
		</div> 
	</div>  
</header> 
