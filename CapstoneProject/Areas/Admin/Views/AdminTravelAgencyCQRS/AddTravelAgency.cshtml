@model CreateTravelAgencyCommand
@{
    ViewData["Title"] = "AddTravelAgency";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Yeni Seyahat Acentesi Ekleme Formu (CQRS)</h3>
    </div>
    <form method="post" role="form"  action="/Admin/AdminTravelAgencyCQRS/AddTravelAgency"   enctype="multipart/form-data">
        <div class="box-body">
            <div class="form-group">
                <label>Title</label>
                <input type="text" class="form-control" asp-for="Description" placeholder="Açıklama giriniz.">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Resim</label>
                <input type="file" asp-for="Image">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

        </div>
        
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>

