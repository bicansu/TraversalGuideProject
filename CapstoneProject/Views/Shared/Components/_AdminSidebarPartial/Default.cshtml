
@{
    Layout = null;
    if (@ViewBag.ImageUrl == null)
    {
        ViewBag.ImageUrl = "/Images/user.png";
    }
}

<aside class="main-sidebar">
    <section class="sidebar">

        <div class="user-panel">
            <div class="pull-left image">
                <img src="@ViewBag.ImageUrl" class="img-circle"  alt="User Image">
            </div>
            <div class="pull-left info">
                <p>@ViewBag.Name @ViewBag.Surname</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>


        @{
            var homeActive = "";
            var aboutActive = "";
            var bannerActive = ""; 
            var contactActive = "";
            var infoActive = "";
            var tourActive = "";
            var travelAgencyActive = "";
            var accountActive = "";
            var excelActive = "";
            var pdfActive = "";
            var mailActive = "";
            var SubActive = "";
            var etkinlikActive = "";
            var roleActive = "";
            switch (ViewData["Title"])
            {
                case "Anasayfa":
                     homeActive = "active"; 

                    break;
                case "Hakkımızda":
                     homeActive = "";
                     aboutActive = "active"; 
                    break;
                case "Banner": 
                     bannerActive = "active"; 
                    break;
                case "İletişim": 
                     contactActive = "active"; 
                    break;
                case "Bilgi": 
                     infoActive = "active"; 
                    break;
                case "Tur Bilgisi": 
                     tourActive = "active"; 
                    break;
                case "Seyahat Acentesi": 
                     travelAgencyActive = "active"; 
                    break;
                case "Kullanıcılar": 
                     accountActive = "active"; 
                    break;
                case "Excel Raporlar": 
                     excelActive = "active"; 
                    break;
                case "Pdf Raporlar": 
                     pdfActive = "active"; 
                    break;
                case "Mail Gönder": 
                     mailActive = "active"; 
                    break;
                case "Aboneler": 
                     SubActive = "active"; 
                    break;
                case "Etkinlikler": 
                    etkinlikActive = "active";
                    break;
                case "Roller":
                    roleActive = "active";
                    break;
            }
        }
        <ul class="sidebar-menu" data-widget="tree" style="margin-top:10px;">
            <li class="header">MENÜLER</li>
            <li class="@homeActive">
                <a href="/AdminHome/Index/">
                    <i class="fa fa-home"></i> <span>ANASAYFA</span>
                </a>
            </li>
            <li class="@etkinlikActive">
                <a href="/AdminCalendar/Index/">
                    <i class="fa fa-calendar"></i> <span>ETKİNLİKLER</span>
                </a>
            </li>
            <li class="@roleActive">
                <a href="/AdminRole/Index/">
                    <i class="fa fa-gg"></i> <span>ROLLER</span>
                </a>
            </li>
            <li class="@etkinlikActive">
                <a href="/AdminUsers/Index/">
                    <i class="fa fa-users"></i> <span>KULLANICILAR</span>
                </a>
            </li>
            <li class="@aboutActive">
                <a href="/AdminAbout/Index/">
                    <i class="fa fa-book"></i> <span>HAKKIMIZDA</span>
                </a>
            </li>
            <li class="@bannerActive">
                <a href="/AdminBanner/Index/">
                    <i class="fa fa-picture-o"></i> <span>BANNER</span>
                </a>
            </li>
            <li class="@contactActive">
                <a href="/Admin/AdminContact/Index/">
                    <i class="fa fa-phone-square"></i> <span>İLETİŞİM</span>
                </a>
            </li>
            @*<li class="@infoActive">
                <a href="/AdminOurInfo/Index/">
                    <i class="fa fa-info-circle"></i> <span>BİLGİ</span>
                </a>
            </li>*@
            @*/AdminTourInform/Index/*@
            <li class="@tourActive">
                <a href="/Admin/TourInformMediatR/Index/">
                    <i class="fa fa-list-alt"></i> <span>TUR BİLGİSİ (CQRS MediatR)</span>
                </a>
            </li>
            <li class="@travelAgencyActive">
                <a href="/Admin/AdminTravelAgencyCQRS/Index">
                    <i class="fa fa-plane"></i> <span>SEYAHAT ACENTESİ (CQRS)</span>
                </a>
            </li>
            <li class="@accountActive">
                <a href="/Admin/Account/Index">
                    <i class="fa fa-money"></i> <span>PARA TRANSFERİ (UOW)</span>
                </a>
            </li>
            <li class="@excelActive">
                <a href="/AdminExcel/Index">
                    <i class="fa fa-file-excel-o"></i> <span>EXCEL RAPORLAR</span>
                </a>
            </li>
            <li class="@pdfActive">
                <a href="/AdminPDFReport/Index">
                    <i class="fa fa-file-pdf-o"></i> <span>PDF RAPORLAR</span>
                </a>
            </li>
            <li class="@mailActive">
                <a href="/Admin/Mail/Index">
                    <i class="fa fa-envelope"></i> <span>MAİL GÖNDER</span>
                </a>
            </li>
            <li class="@SubActive">
                <a href="/AdminSubscribe/Index">
                    <i class="fa fa-user-plus"></i> <span>ABONELER (API)</span>
                </a>
            </li>
            <li class="@SubActive">
                <a href="/EmployeeTask/Index">
                    <i class="fa fa-users"></i> <span>ÇALIŞANLAR (SIGNALR)</span>
                </a>
            </li>
            <li class="@SubActive">
                <a href="/Default/Index">
                    <i class="fa fa-dashboard"></i> <span>DASHBOARD (SIGNALR)</span>
                </a>
            </li>
            <li class="@SubActive">
                <a href="/Admin/AdminApiHotel/Index">
                    <i class="fa fa-dashboard"></i> <span>POPÜLER OTEL (RAPIDAPI)</span>
                </a>
            </li>
        </ul>
    </section>
</aside>
