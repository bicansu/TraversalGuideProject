@model CapstoneProject.Models.MailRequestModel
@{
    ViewData["Title"] = "Mail Gönder";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="box box-primary">

    <div class="box-header with-border"><h3 class="box-title">Yeni Mail Gönderme Sayfası</h3></div>
 <div class="box-body">
<form method="post">
    <div class="form-group">
        @Html.Label("Alıcı Mail Adresi")
        <input type="text" asp-for="ReceiverMail" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Konu Başlığı")
        <input type="text" asp-for="Subject" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Mesaj İçeriği")
        <textarea cols="30" rows="5" class="form-control" asp-for="Body"></textarea>
     
    </div>
    <br />

    <button class="btn btn-outline-warning">Mail Gönder</button>

</form>

</div>

@if(ViewBag.sonucBasarili!="")
    {
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h4><i class="icon fa fa-check"></i> BAŞARILI!</h4>
            @ViewBag.sonucBasarili
        </div>
    }          
</div>
