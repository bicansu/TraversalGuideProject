@model List<About>
@{
    ViewData["Title"] = "Hakkımızda";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-title">About List</h3>&emsp;
        <a class="btn btn-success" href="/AdminAbout/AddAbout/"><i class="fa fa-plus"></i> New About</a>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>ShortDescription</th>
                    <th>LongDescription</th>
                    <th>Image</th>
                    <th>Process</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                  <tr>
                    <td>@item.AboutID</td>
                    <td>@item.Title</td>
                    <td>@item.ShortDescription</td>
                    <td>@item.LongDescription</td>
                    <td>
                        <img src ="@item.Image" style="width:100px; height:100px;"/>
                        
                    </td>
                    <td>
                        <a href="/AdminAbout/UpdateAbout/@item.AboutID" class="btn btn-primary">UPDATE</a>
                        <a href="/AdminAbout/DeleteAbout/@item.AboutID" class="btn btn-danger">DELETE</a>

                    </td>

                </tr>   
                }            
            </tbody>
        </table>
    </div> 
</div>

<script>
    $(function () {
        $('#example1').DataTable()
        $('#example2').DataTable({
            'paging': true,
            'lengthChange': false,
            'searching': false,
            'ordering': true,
            'info': true,
            'autoWidth': false
        })
    })
</script>
