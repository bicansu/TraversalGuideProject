@model List<TourInform>
@{
    Layout = null;
}
<style>
	

</style>
<!--packages start-->
<section id="pack" class="packages">
	<div class="container">
		<div class="gallary-header text-center">
			<h2>
				Özel Paketler
			</h2>
			<p>
				Seyahat paketlerimizi detaylı olarak inceleyebilirsiniz. 
			</p>
		</div><!--/.gallery-header-->
		<div class="packages-content">
			<div class="row">
			@foreach(var item in Model){
				<div class="col-md-4 col-sm-6">
					<div class="single-package-item">
						<img src="@item.Image" alt="package-place">
						<div class="single-package-item-txt">
							<h3>@item.Title <span class="pull-right">@item.Price €</span></h3>
							<div class="packages-para">
								<p>
									<span>
										<i class="fa fa-angle-right"></i> @item.Description
									</span>
									 
								</p>
								 
							</div> 
							 
							<div class="about-btn">
								 
							</div> 
						</div> 
					</div> 

				</div> 
			} 
			</div> 
		</div> 
	</div> 

</section> 
