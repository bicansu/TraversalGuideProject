@model CapstoneProject.Models.AdminSignInViewModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Traversal Admin Giriş Ekranı</title>
     
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    
    <link rel="stylesheet" href="~/AdminTemplate/bower_components/bootstrap/dist/css/bootstrap.min.css">
     
    <link rel="stylesheet" href="~/AdminTemplate/bower_components/font-awesome/css/font-awesome.min.css">
    
    <link rel="stylesheet" href="~/AdminTemplate/bower_components/Ionicons/css/ionicons.min.css">
   
    <link rel="stylesheet" href="~/AdminTemplate/dist/css/AdminLTE.min.css">
    
    <link rel="stylesheet" href="~/AdminTemplate/plugins/iCheck/square/blue.css">


    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href=""><b>Admin Girişi</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Giriş Yap</p>

            <form method="post">
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" asp-for="username" placeholder="Kullanıcı adınızı giriniz.">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    <span asp-validation-for="username"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" asp-for="password" placeholder="Şifrenizi giriniz.">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    <span asp-validation-for="password"></span>
                </div>
                <div class="row">
                  
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat"><i class="fa fa-sign-in"></i> Giriş Yap</button>
                    </div>
                     <div class="col-xs-6">
                        <a href="#">Şifremi Unuttum</a><br>
                     </div>
                </div>
            </form>



           
            <a href="/AdminLogin/SignUp/" class="text-center">Kayıt Ol</a>

        </div>

    </div>

    <script src="~/AdminTemplate/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/AdminTemplate/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/AdminTemplate/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });
    </script>
</body>
</html>
